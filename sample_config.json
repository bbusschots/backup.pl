// sample config file
{
	"localPaths": {
		"ssh": "/usr/bin/ssh",
		"scp": "/usr/bin/scp",
		"rsync": "/usr/bin/rsync",
		"mkdir": "/bin/mkdir",
		"backupBaseDir": "/var/backup/mybackup/"
	},
	"servers": [
		{
			"fqdn": "myserver.com",
			"sshUsername": "backup",
			"remotePaths": {
				"stagingDir": "/var/backupStaging/"
			},
			"backup_MySQL": {
				"dumpDBs": true,
				"mysqldump": "/usr/bin/mysqldump",
				"user": "root",
				"password": "mysql_root_password", // OPTIONAL
				"host": "some.hostname.fqdn", // OPTIONAL
				"port": 3306, // OPTIONAL
				"databases": [ "db1", "db2"] // OPTIONAL - all DBs dumped if not present
			},
			"backup_tar": {
				"tar": "/bin/tar",
				"folders": {
					"etc_httpd": "/etc/httpd/",
					"var_www": "/var/www/"
				}
			},
			"backup_rsync": {
				"folders": {
					"etc": "/etc/",
					"var_www": "/var/www/",
					"home": "/home/"
				}
			},
			"backup_svndump": {
				"svnadmin": "/usr/bin/svnadmin",
				"ls": "/bin/ls",
				"folders": {
					"my_repos": "/home/username/svnrepos/"
				}
			}
		}
	]
}